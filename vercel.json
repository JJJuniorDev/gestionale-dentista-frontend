{
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/dentista-gestionale"
      }
    }
  ],
   "build": {
    "env": {
      "NPM_FLAGS": "--legacy-peer-deps"
    }
  },
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "installCommand": "npm install --legacy-peer-deps",
  "buildCommand": "npm run build"
}
